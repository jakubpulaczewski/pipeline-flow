{
    "name": "Workflow Project",
    "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
	"features": {
		"ghcr.io/devcontainers/features/python:1": {
			"version": "3.12"
		},
		"ghcr.io/devcontainers-contrib/features/pre-commit:2": {},
		"ghcr.io/devcontainers-contrib/features/isort:2": {},
		"ghcr.io/devcontainers-contrib/features/poetry:2": {},
		"ghcr.io/devcontainers-contrib/features/black:2": {
			"version": "latest"
		},
		// "ghcr.io/devcontainers-contrib/features/spark-sdkman:2": {
		// 	"version": "3.5.0", // Matrix https://community.cloudera.com/t5/Community-Articles/Spark-Python-Supportability-Matrix/ta-p/379144
		// 	"jdkVersion": "11"
		// }
    },

	"mounts": [
		"source=${localEnv:HOME}/.ssh,target=/home/vscode/.ssh,type=bind,consistency=cached"
	],

    // Configure tool-specific properties.
	"customizations": {
		// Configure properties specific to VS Code.
		"vscode": {
			// Set *default* container specific settings.json values on container create.
			"settings": {
				"python.pythonPath" : "/usr/local/bin/python",
				"python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
				"python.languageServer": "Pylance",
				"python.testing.pytestEnabled": true,
				"autoDocstring.docstringFormat": "google",
				"python.analysis.extraPaths": [
					"${workspaceFolder}/src",
					"${workspaceFolder}/tests"
				],
				"terminal.integrated.env.linux": {
					"PYTHONPATH": "${workspaceFolder}/src:${workspaceFolder}/tests"
				}
			},

			// Add the IDs of extensions you want installed when the container is created.
			"extensions": [
				"ms-python.python",
				"ms-python.vscode-pylance",
                "eamodio.gitlens",
				"njpwerner.autodocstring"
			]
		}


	},
	"postCreateCommand": "chmod 700 /home/vscode/.ssh && chmod 600 /home/vscode/.ssh/id_rsa",

    "remoteUser": "vscode"
}
